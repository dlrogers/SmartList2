<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Settings"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:background="@layout/nav_bk">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@layout/nav_bk2">
            <TextView android:id="@+id/sync_settings"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Sync Settings"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="22sp"
                android:textColor="#000000"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@layout/nav_bk2">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Auto Sync"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="22sp"
                android:textColor="#000000"
                android:gravity="center_horizontal"/>
            <CheckBox android:id="@+id/auto_sync"
                android:layout_height="40dp"
                android:layout_width="40dp"
                />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@layout/nav_bk2">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Vibrate on touch"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="22sp"
                android:textColor="#000000"
                android:gravity="center_horizontal"/>
            <CheckBox android:id="@+id/vibrate"
                android:layout_height="40dp"
                android:layout_width="40dp"
                />
        </TableRow>
    </TableLayout>
</RelativeLayout>
